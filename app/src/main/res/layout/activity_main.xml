<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.example.ryanj.hiit_v1.MainActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:text="0"
        android:textColor="@android:color/black"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/laptxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lap: 0"
        android:textColor="@android:color/black"
        android:textSize="36sp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />


    <pl.droidsonroids.gif.GifImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/dp"
        android:background="@android:color/white"
        android:layout_marginTop="112dp"
        android:layout_below="@+id/Taptap"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/Taptap"
        android:longClickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tap Me!"
        android:layout_below="@+id/laptxt"
        android:layout_alignLeft="@+id/laptxt"
        android:layout_alignStart="@+id/laptxt"
        android:layout_marginTop="109dp" />


</RelativeLayout>
